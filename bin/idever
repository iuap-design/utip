#!/usr/bin/env node 
'use strict'

process.env.NODE_PATH = __dirname + '/../node_modules/'

const program = require('commander')

program
	.version(require('../package').version )

program
	.usage('<command> [options] <mode>')

program
	.command('build')
	.alias('b')
	.option('-m, --mode <mode>', '取消更新各个仓库')
	.description('输出最终目录，可设置参数是否需要更新各仓库')
	.action((options) => {
		require('../command/build')(options)
	})

program
	.command('temp')
	.description('执行build后，创建空页面模板')
	.alias('t')
	.action(() => {
		require('../command/temp')()
	})

program
	.command('pppppublish')
	.description('各仓库发包:发包有风险,执行需谨慎')
	.action(() => {
		require('../command/publish')()
	})

program
	.command('checkout')
	.description('还原所有文件（包含dist）修改')
	.alias('co')
	.action(() => {
		require('../command/check')()
	})

program
	.command('checkdist')
	.description('还原dist输出目录')
	.alias('cd')
	.action(() => {
		require('../command/checkdist')()
	})

program
	.command('pull')
	.description('拉取仓库更新')
	.alias('pu')
	.action(() => {
		require('../command/pull')()
	})

program.parse(process.argv)

if(!program.args.length){
  program.help()
}