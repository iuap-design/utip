#!/usr/bin/env node --harmony
'use strict'

process.env.NODE_PATH = __dirname + '/../node_modules/'

const program = require('commander')

program
	.version(require('../package').version )

program
	.usage('<command>')

program
	.command('build')
	.description('修改原始文件kero-adapter输出最终框架,测试无误务必提交仓库代码')
	.alias('b')
	.action(() => {
		require('../command/build')()
	})

program
	.command('temp')
	.description('执行build后，创建空页面模板')
	.alias('t')
	.action(() => {
		require('../command/temp')()
	})

program
	.command('pppppublish')
	.description('各仓库发包:发包有风险,执行需谨慎,发包后务必提交仓库代码')
	.action(() => {
		require('../command/publish')()
	})

program.parse(process.argv)

if(!program.args.length){
  program.help()
}